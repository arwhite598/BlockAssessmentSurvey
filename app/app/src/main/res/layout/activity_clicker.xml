<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickerActivity">

    <TextView
        android:id="@+id/holder"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/counter"
        android:layout_centerHorizontal="true"
        android:text="Hello world?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/counter"
        android:layout_width="149dp"
        android:layout_height="77dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:hint="Enter Count Here"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/counter"
        android:layout_alignTop="@id/counter"

        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/counter"


        app:srcCompat="@drawable/ic_add_black_24dp" />

    <ImageButton
        android:id="@+id/remove"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/counter"
        android:layout_alignTop="@id/counter"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/counter"
        app:srcCompat="@drawable/ic_remove_black_24dp" />

    <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/counter"
        app:srcCompat="@drawable/ic_done_black_24dp" />


</RelativeLayout>